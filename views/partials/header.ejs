<head>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="/styles/styles.css" />
</head>
<header>
  <nav class="container">
    <div class="row">
      <h1 class="col-4">
        <a class="navbar-brand" href="/">Members Only</a>
      </h1>
      <% if(typeof user !== 'undefined' && user?.username){ %>
      <div class="dropdown d-flex col-8 justify-content-end">
        <button
          class="btn dropdown-toggle nav-dropdown-toggle"
          type="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <img class="person-icon" src="/icons/person-circle.svg" alt="" />
          <%= user.username %>
        </button>
        <ul class="dropdown-menu">
          <li>
            <a class="dropdown-item" href="/join-the-club">Join the club</a>
          </li>
          <li class="dropdown-item">
            <form action="/log-out" method="post">
              <button class="dropdown-item log-out-button" type="submit">
                Log out
              </button>
            </form>
          </li>
        </ul>
      </div>
      <% } %>
    </div>
  </nav>
</header>
