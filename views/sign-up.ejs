<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Members Only</title>
    <link rel="icon" type="image/x-icon" href="/icons/main-icon.svg" />
  </head>
  <body class="d-flex flex-column">
    <%- include('./partials/header') %>
    <main class="main-content">
      <div class="d-flex justify-content-center align-items-center h-100">
        <div class="container flex-column d-flex align-items-center">
          <h2>Sign up</h2>
          <div>
            <ul>
              <% if(typeof errors !== 'undefined' && Array.isArray(errors) &&
              errors.length) {%> <% errors.forEach(error => { %>
              <li><%= error %></li>
              <%}); }%>
            </ul>
          </div>
          <form action="/sign-up" method="post" class="flex-column d-flex">
            <label for="firstName" class="mb-3"
              >First name
              <input
                type="text"
                name="firstName"
                id="firstName"
                value="<%- user?.firstName %>"
                class="form-control"
              />
            </label>
            <label for="lastName" class="mb-3"
              >Last name
              <input
                type="text"
                name="lastName"
                id="lastName"
                value="<%- user?.lastName %>"
                class="form-control"
              />
            </label>
            <label for="username" class="mb-3"
              >Username
              <input
                type="text"
                name="username"
                id="username"
                value="<%- user?.username %>"
                class="form-control"
              />
            </label>
            <label for="password" class="mb-3"
              >Password
              <input
                type="password"
                name="password"
                id="password"
                class="form-control"
              />
            </label>
            Confirm password
            <label for="confirmPassword" class="mb-3">
              <input
                type="password"
                name="confirmPassword"
                class="form-control"
              />
            </label>
            <input class="btn" type="submit" value="SIGN UP" />
          </form>
          <p class="mt-3">
            Already have an account? <a href="/log-in">Log in here</a>
          </p>
        </div>
      </div>
    </main>
    <%- include('./partials/footer')%>
  </body>
</html>
